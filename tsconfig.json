{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./*"],
      "@typechain-types/*": ["typechain-types/*"]
    },
    "types": ["node", "hardhat", "chai", "@nomicfoundation/hardhat-chai-matchers"]
  },
  "include": [
    "hardhat.config.ts",
    "scripts/**/*.ts",
    "test/**/*.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules", "artifacts", "cache"]
}